---
import type { GalleryPhoto } from "@/features/gallery/types";

export interface Props {
  photos: GalleryPhoto[];
  galleryId: string;
}

const { photos, galleryId } = Astro.props as Props;

const dialogId = `${galleryId}-lightbox`;
const dataId = `${galleryId}-data`;
const safeJson = JSON.stringify(photos).replaceAll("<", "\\u003c");
---

<dialog id={dialogId} class="glb p-0 bg-transparent">
  <div class="glb-content">
    <button type="button" class="glb-close" aria-label="Close">×</button>

    <button type="button" class="glb-nav glb-prev" aria-label="Previous">‹</button>
    <button type="button" class="glb-nav glb-next" aria-label="Next">›</button>

    <img class="glb-img" alt="" />

    <div class="glb-info">
      <div class="glb-title"></div>
      <div class="glb-meta"></div>
    </div>
  </div>
</dialog>

<script type="application/json" id={dataId} set:html={safeJson}></script>

<style>
  dialog::backdrop {
    background-color: rgba(0, 0, 0, 0.85);
  }

  dialog.glb {
    border: none;
    padding: 0;
    background: transparent;
  }

  dialog.glb[open] {
    inset: 0;
    margin: auto;
    display: grid;
    place-items: center;
  }

  .glb-content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .glb-img {
    display: block;
    width: auto;
    height: auto;
    object-fit: contain;
    max-width: min(90vw, 1100px);
    max-height: 85vh;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.5);
  }

  .glb-close {
    position: absolute;
    top: -8px;
    right: -4px;
    width: 44px;
    height: 44px;
    border: none;
    background: transparent;
    color: rgba(255, 255, 255, 0.9);
    font-size: 28px;
    line-height: 1;
    display: grid;
    place-items: center;
    cursor: pointer;
    transition: color 120ms ease;
    z-index: 10;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.45);
  }

  .glb-close:focus,
  .glb-close:focus-visible,
  .glb-nav:focus,
  .glb-nav:focus-visible {
    outline: none;
    box-shadow: none;
  }

  .glb-close:hover {
    color: rgba(255, 255, 255, 1);
  }

  .glb-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 48px;
    height: 48px;
    border: none;
    background: transparent;
    color: rgba(255, 255, 255, 0.95);
    font-size: 32px;
    line-height: 1;
    display: grid;
    place-items: center;
    cursor: pointer;
    transition: color 120ms ease;
    z-index: 10;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.45);
  }

  .glb-nav:hover {
    color: rgba(255, 255, 255, 1);
  }

  .glb-prev { left: 16px; }
  .glb-next { right: 16px; }

  .glb-info {
    margin-top: 16px;
    text-align: left;
    width: 100%;
  }

  .glb-title {
    font-size: 14px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.95);
    max-width: 600px;
  }

  .glb-title:empty {
    display: none;
  }

  .glb-meta {
    margin-top: 4px;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.55);
    max-width: 600px;
  }

  .glb-meta:empty {
    display: none;
  }
</style>

<script define:vars={{ dialogId, dataId, galleryId }}>
  document.addEventListener("DOMContentLoaded", () => {
    const dialog = document.getElementById(dialogId);
    const dataEl = document.getElementById(dataId);

    if (!(dialog instanceof HTMLDialogElement) || !dataEl) return;

    const photos = JSON.parse(dataEl.textContent || "[]");
    const triggers = Array.from(document.querySelectorAll(`[data-gallery-id="${galleryId}"]`));

    const img = dialog.querySelector(".glb-img");
    const closeBtn = dialog.querySelector(".glb-close");
    const prevBtn = dialog.querySelector(".glb-prev");
    const nextBtn = dialog.querySelector(".glb-next");
    const titleEl = dialog.querySelector(".glb-title");
    const metaEl = dialog.querySelector(".glb-meta");

    if (!(img instanceof HTMLImageElement)) return;

    let currentIndex = 0;
    let previousOverflow = "";

    const clampIndex = (idx) => {
      if (!photos.length) return 0;
      return Math.min(Math.max(idx, 0), photos.length - 1);
    };

    const updateNavVisibility = () => {
      const hasMultiple = photos.length > 1;
      if (prevBtn instanceof HTMLElement) {
        prevBtn.style.visibility = hasMultiple && currentIndex > 0 ? "visible" : "hidden";
      }
      if (nextBtn instanceof HTMLElement) {
        nextBtn.style.visibility = hasMultiple && currentIndex < photos.length - 1 ? "visible" : "hidden";
      }
    };

    const prefetch = (idx) => {
      const p = photos[idx];
      if (!p?.src) return;
      const im = new Image();
      im.src = p.src;
    };

    const render = (idx) => {
      currentIndex = clampIndex(idx);
      const p = photos[currentIndex];
      if (!p) return;

      img.src = p.src;
      img.alt = p.title?.trim() || "Photograph";

      // Title
      if (titleEl) titleEl.textContent = p.title?.trim() || "";

      // Meta line: combine shot + location
      const parts = [];
      if (p.shotUsing?.trim()) parts.push(p.shotUsing.trim());
      if (p.location?.trim()) parts.push(p.location.trim());
      if (metaEl) metaEl.textContent = parts.join(" · ");

      if (currentIndex < photos.length - 1) prefetch(currentIndex + 1);
      if (currentIndex > 0) prefetch(currentIndex - 1);

      updateNavVisibility();
    };

    const open = (idx) => {
      render(idx);
      previousOverflow = document.documentElement.style.overflow;
      document.documentElement.style.overflow = "hidden";
      dialog.showModal();
    };

    const close = () => {
      if (!dialog.open) return;
      dialog.close();
      document.documentElement.style.overflow = previousOverflow;
    };

    const next = () => {
      if (currentIndex < photos.length - 1) render(currentIndex + 1);
    };
    const prev = () => {
      if (currentIndex > 0) render(currentIndex - 1);
    };

    for (const el of triggers) {
      el.addEventListener("click", () => {
        const idx = Number(el.getAttribute("data-gallery-index") ?? 0);
        if (Number.isFinite(idx)) open(idx);
      });
    }

    closeBtn?.addEventListener("click", close);
    prevBtn?.addEventListener("click", prev);
    nextBtn?.addEventListener("click", next);

    dialog.addEventListener("click", (e) => {
      if (e.target === dialog) close();
    });

    dialog.addEventListener("cancel", (e) => {
      e.preventDefault();
      close();
    });

    dialog.addEventListener("keydown", (e) => {
      if (!dialog.open) return;
      if (e.key === "Escape") { e.preventDefault(); close(); }
      else if (e.key === "ArrowRight") { e.preventDefault(); next(); }
      else if (e.key === "ArrowLeft") { e.preventDefault(); prev(); }
    });
  });
</script>
